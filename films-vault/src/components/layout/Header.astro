---
import DarkModeToggle from '../svelte/DarkModeToggle.svelte';
// Professional navigation header with dynamic links
---

<header class="bg-vault-dark/95 backdrop-blur-sm border-b border-vault-light/20 sticky top-0 z-50">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo Section -->
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-gradient-to-br from-vault-medium to-vault-light rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-vault-dark" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 6a2 2 0 012-2h6l2 2h6a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-xl font-semibold text-vault-cream">
            <a href="/" class="hover:text-vault-light transition-colors">FilmVault</a>
          </h1>
          <p class="text-xs text-vault-light/60">Cinema Tracking</p>
        </div>
      </div>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/movies" 
           class="text-vault-cream hover:text-vault-light transition-colors font-medium">
          Movies
        </a>
        <a href="/genres" 
           class="text-vault-cream hover:text-vault-light transition-colors font-medium">
          Genres
        </a>
        <a href="/watchlist" 
           class="text-vault-cream hover:text-vault-light transition-colors font-medium">
          Watchlist
        </a>
        <a href="/search" 
           class="text-vault-cream hover:text-vault-light transition-colors font-medium">
          Advanced Search
        </a>
        
        <!-- Dark Mode Toggle -->
        <div class="ml-6">
          <DarkModeToggle client:only="svelte" />
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden flex items-center space-x-4">
        <DarkModeToggle client:only="svelte" />
        <button class="text-vault-cream hover:text-vault-light">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header> 