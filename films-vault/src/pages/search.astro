---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { getCollection } from 'astro:content';
import AdvancedSearch from '../components/svelte/AdvancedSearch.svelte';

const genres = await getCollection('genres');
---

<Layout title="Advanced Movie Search">
  <Header />
  
  <main class="min-h-screen bg-vault-dark">
    <div class="container mx-auto px-6 py-8">
      <div class="mb-12 text-center">
        <h1 class="text-4xl font-bold text-vault-cream mb-4">Advanced Search</h1>
        <p class="text-vault-light/80 text-lg max-w-2xl mx-auto">
          Find exactly what you're looking for with our powerful search and filtering tools.
        </p>
      </div>

      <AdvancedSearch 
        client:visible
        genres={genres.map(g => ({ id: g.data.id, name: g.data.name }))}
      />
    </div>
  </main>
  
  <Footer />
</Layout>